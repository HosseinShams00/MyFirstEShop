<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/lib/bootstrap-v4-rtl-master/dist/css/bootstrap-rtl.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome-free-5.15.3-web/css/all.min.css" />
</head>
<body class="rtl">
    <div id="Background-SlidBar" onclick="ReSizeMenu()">
        <div id="SlidBar">

        </div>
    </div>
    <header class="row">

        <nav class="col-12 navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">تمرین دوم - فروشگاه</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <div class="fa-pull-left UserAccountBox" style="border: 1px #D0D3D4 solid;">

                            <form asp-controller="RegisterUser" asp-action="Logout" method="post">
                                <img src="https://i.pinimg.com/600x315/80/63/35/8063359effd01b990e653bb32a83485d.jpg"
                                     style="width: 50px; height: 50px; border-radius: 50%; background-position: center; float: left;" />
                                <a class="text-dark" asp-area="" asp-controller="RegisterUser" asp-action="Signin">
                                    @(User.FindFirst("FirstName").Value + " " +User.FindFirst("LastName").Value)
                                </a>
                                <button class="btn btn-secondary" asp-controller="Setting" asp-action="Index" style="margin:10px 0;">تنظیمات</button>

                                <button class="btn btn-danger" type="submit">خروج</button>

                            </form>
                        </div>

                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="RegisterUser" asp-action="Signin">ثبت نام</a>

                        <a class="nav-link text-dark" asp-area="" asp-controller="RegisterUser" asp-action="Login">ورود</a>
                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" onclick="ReSizeMenu()" href="#"> <i class="fas fa-list"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">تماس با ما</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShopingList" asp-action="Index"><i class="fas fa-shopping-basket"></i></a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>


    </header>

    <div class="container">

        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top footer text-muted">
        <div class="container">
            <p>Hello World</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
