<div class="row">

    <div class="col-12 col-md-5 col-lg-4">
        <div class="Box bg-White shadows" style="text-align:center;">
            <img src="https://i.pinimg.com/600x315/80/63/35/8063359effd01b990e653bb32a83485d.jpg"
                style="height: 25vh; border-radius: 50%; background-position: center;" />
            <hr />
            <nav>
                <ul style="list-style: none; margin: 0; padding: 0;">
                    <li class="SettingBtn" onclick="SettingMenu(panel1)"><a>داشبورد</a></li>
                    <li class="SettingBtn" onclick="SettingMenu(panel2)"><a>تغییر اطلاعات شخصی</a></li>
                    <li class="SettingBtn" onclick="SettingMenu(panel3)"><a>فاکتور های من</a></li>
                    <li class="SettingBtn" onclick="SettingMenu(panel4)"><a>تیکت</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="Group-Panel-Setting Box shadows bg-White-Gradian col-11 col-md-6 col-lg-7 mt-4 mt-md-0 "
        style="border-radius: 20px;margin-right:10px;">
        <div class="offset-lg-1 col-lg-10 col-md-12 Panel-Setting user-hide" id="panel1">
            @await Component.InvokeAsync("UserSetting_Dashboard")
        </div>
        <div class="offset-lg-1 col-lg-10 col-md-12 mt-4 mt-md-0 Panel-Setting user-hide" id="panel2">
            @await Component.InvokeAsync("ChangeUserInfo")
        </div>
        <div class="offset-lg-2 col-md-12 mt-4 mt-md-0 Panel-Setting user-hide" id="panel3">

        </div>
        <div class="offset-lg-2 col-md-12 mt-4 ml-0 mt-md-0 Panel-Setting user-hide" id="panel4">
            @await Component.InvokeAsync("SendTicket")
        </div>

    </div>

</div>
