@model TicketViewModel

@if (Model != null)
{
    <div class="row Box bg-White">

        <div class="col-12">
            <h4>
                شما در حال مشاهده ی تیکت شماره ی : <strong>@Model.MessageId</strong>
            </h4>
            <hr class="col-10 offset-1">
            <form>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control border-bottom-blue" disabled style="font-size: large;">
                </div>
                <div class="form-group">
                    <label asp-for="UserSendQuestionDateTime" class="control-label"></label>
                    <input asp-for="UserSendQuestionDateTime" class="form-control border-bottom-blue" disabled
                    style="font-size: large;">
                </div>
            </form>
        </div>
        <h3>پرسش و پاسخ : </h3><br>
        <hr class="col-10 offset-1">
        <div class="col-12 Box" style="background-color: #e9ecef;">

            <div class="col-10 Box" style="background-color: #9cd39d;">
                <p style="color: #4D5656;">تیکت شما :</p>
                <hr>
                <p style="color: #2E4053;">@Model.UserQuestion</p><br>
                <hr>
                <span class="col-2 offset-10 mb-0 mt-4 pl-0" style="color: #2E4053;">@Model.UserSendQuestionDateTime</span>
            </div>

            @if (Model.AdminAnswer != null)
            {
                <div class="col-10 offset-2 Box mt-4" style="background-color: #85C1E9;" >
                    <p style="color: #4D5656;">پاسخ بخش پشتیبانی : </p>
                    <hr>
                    <p>@Model.AdminAnswer</p><br>
                    <hr>
                    <span class="col-2 offset-10 mb-0 mt-4 pl-0" style="color: #2E4053;">@Model.AdminAnswerDateTime</span>
                </div>
            }
        </div>
    </div>
}
else
{
    <h1>
        کاربر گرامی همچین تیکتی یافت نشد.
    </h1>
}