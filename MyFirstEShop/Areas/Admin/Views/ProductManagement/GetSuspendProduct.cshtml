@model IEnumerable<Product>


<div class="row bg-White">

    @if (ViewBag.ProductResult == "success")
    {
        <div class="col-12 alert alert-success">
            <strong>عملیات با موفقیت انجام شد</strong>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    else if(ViewBag.ProductResult == "faild")
    { 
        <div class="col-12 alert alert-danger">
            <strong>علمیات با مشکل مواجه شد</strong>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }


    <div class="col-12 table-responsive">

        @if (Model.Count() != 0)
        {
            <table>

                <tr>
                    <th>نام محصول</th>
                    <th colspan="2"></th>
                </tr>

                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <img src="~/ProductCovers/@product.ProductCoverAddress" class="thumbnail-img" /><br />
                            <span>@product.Name</span>
                        </td>

                        <td colspan="2">
                            <a role="button" class="btn btn-danger" formmethod="post"  asp-area="Admin" asp-action="RemoveProduct" asp-controller="ProductManagement" asp-route-productId=@product.Id>حذف محصول</a>
                            | <a role="button" class="btn btn-info" formmethod="post" asp-area="Admin" asp-action="ActiveProduct" asp-controller="ProductManagement" asp-route-productId=@product.Id>قبول نکردن حذف</a>
                        </td>
                    </tr>
                }

            </table>
        }

    </div>

</div>